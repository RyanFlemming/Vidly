@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Movie</h1>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Movie.Name"></label>
        <div class="col-sm-10">
            <input asp-for="Movie.Name" class="form-control" placeholder="Enter the name of a movie">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Movie.ReleaseDate"></label>
        <div class="col-sm-10">
            <input asp-for="Movie.ReleaseDate" type="date" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Movie.GenreId"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Movie.GenreId" class="form-control" asp-items="Model.Genres"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <div class="text-md-left">
                <input type="number" asp-for="Movie.NumInStock" min="0" max="20" value="0" />
            </div>

        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor((m) => m.Movie.Id)
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}