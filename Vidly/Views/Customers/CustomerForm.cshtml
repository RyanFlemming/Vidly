@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Customer</h1>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Customer.Name"></label>
        <div class="col-sm-10">
            <input asp-for="Customer.Name" class="form-control" placeholder="Enter your full name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Customer.Birthdate"></label>
        <div class="col-sm-10">
            <input asp-for="Customer.Birthdate" type="date" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Customer.MembershipTypeId"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Customer.MembershipTypeId" class="form-control" asp-items="Model.MemSelectListItems"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label><input asp-for="Customer.IsSubscribedToNewsletter" type="checkbox"> Subscribe to Newsletter</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor((m)=>m.Customer.Id)
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
}
